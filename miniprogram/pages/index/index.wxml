<view class="page cover-box">
    <mp-toptips msg="{{message}}" type="{{type}}" show="{{showTopTips}}" delay="{{3000}}"></mp-toptips>
    <view class="header_container">
        <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
            <image class="avatar" src="{{avatarPic}}"></image>
        </button>

        <text class="nickname" bind:tap="onChooseNickname">{{nickname}}</text>
        <image src="../../src/search.svg" class="search-icon" bind:tap="openSearch"></image>
    </view>
    <view>

    <view class="container">
            <text class="learned-text" bind:tap="openData">已经掌握了</text>
            <text class="num" bind:tap="openData">{{learnData}}</text>
            <text class="learned-text" bind:tap="openData">词</text>
        </view>
        <text class="book-name" style="color: {{bookTextColor}}; background: {{bookBackgroundColor}};"
              bind:tap="openSetting">{{bookName}}</text>

    </view>
    <view class="footer_container">
        <view class="review-background" bind:tap="openReview">
            <text class="review-text">复习</text>
        </view>
        <view class="learn-background" bind:tap="openLearn">
            <text class="learn-text">学习</text>
        </view>
    </view>
</view>
<mp-halfScreenDialog show="{{nicknameDialog}}" closabled="{{false}}">
    <view slot="title">测试标题A</view>
    <view slot="desc">
        <input type="nickname" class="weui-input" placeholder="请输入昵称" model:value="{{nicknameInput}}"/>
    </view>
    <view slot="footer">
        <button type="default" class="weui-btn" bind:tap="nickNameDialogCancel">取消</button>
        <button type="primary" class="weui-btn" bind:tap="nickNameDialogOk">确定</button>
    </view>
</mp-halfScreenDialog>
