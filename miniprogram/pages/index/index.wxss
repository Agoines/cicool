.page {
    position: fixed;
    height: 100%;
    width: 100%;
    background: #F5F5F7;
}

.cover-box {
    padding: 140rpx 50rpx 100rpx;
}

.toolbar {
    align-items: center;
    height: 80px;
    flex: none;
    display: flex;
}

.avatarPic {
    width: 80rpx;
    height: 80rpx;
    border: 10rpx solid rgba(255, 255, 255, 1);
    border-radius: 50%
}

.nickname {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    color: rgba(0, 0, 0, 1);
    font-weight: 600;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    flex-grow: 1;
}

.tool {
    width: 284rpx;
    height: 72rpx;
    align-self: center;
}

.search {
    position: absolute;
    width: 72rpx;
    height: 72rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(107, 122, 153, 0.1);
    border-radius: 36rpx;
}

.search-icon {
    position: absolute;
    width: 32rpx;
    height: 32rpx;
}

.setting {
    position: absolute;
    padding: 18rpx 40rpx;
    margin-left: 102rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(107, 122, 153, 0.1);
    border-radius: 36rpx;
}

.setting-text {
    margin-left: 10rpx;
    font-style: normal;
    font-weight: 500;
    font-size: 28rpx;
    height: 36rpx;
    line-height: 36rpx;
    /*不换行*/
    white-space: nowrap;
    color: #6B7A99;

}

.setting-icon {
    width: 36rpx;
    height: 36rpx;
}


.chat {
    margin-top: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}

.char-bubble {
    float: right;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 30rpx;
    margin-top: 30rpx;

    background: #FFFFFF;
    border-radius: 6rpx 24rpx 24rpx 36rpx;
}

.char-bubble-text {
    font-style: normal;
    font-weight: 500;
    font-size: 28rpx;
    text-align: center;
    color: #292D32;
    /* Inside auto layout */

    flex: none;
    flex-grow: 0;
}

.char-bubble2 {
    float: left;
    max-width: 60%;
    min-width: 20%;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 30rpx;
    align-self: flex-end;


    margin-top: 30rpx;

    background: rgba(41, 204, 57, 0.16);
    border-radius: 24rpx 24rpx 6rpx 36rpx;
}


.char-bubble2-text {
    font-style: normal;
    font-weight: 500;
    font-size: 28rpx;
    text-align: center;

    color: #29CC39;

    flex: none;
    flex-grow: 0;
}


.footer_container {
    /* 底部 */
    position: fixed;
    bottom: 0;

    width: 100%;
    height: 120rpx;

    display: flex;
    flex-direction: row;
    margin-bottom: 100rpx;
}

.review-background {
    flex: 1;
    width: 100%;
    height: 100%;
    margin: 0 25rpx 0 50rpx;

    background: #FFFFFF;
    border-radius: 20rpx;

    /* 居中 */
    display: flex;
    align-items: center;
    justify-content: center;
}

.review-text {
    font-style: normal;
    font-weight: 500;
    font-size: 32rpx;

    color: #292D32;
}

.learn-background {
    flex: 1;

    width: 100%;
    height: 100%;
    margin: 0 50rpx 0 25rpx;

    background: #FFFFFF;
    border-radius: 20rpx;

    /* 居中 */
    display: flex;
    align-items: center;
    justify-content: center;
}

.learn-text {
    font-style: normal;
    font-weight: 500;
    font-size: 32rpx;
    color: #292D32;
}
