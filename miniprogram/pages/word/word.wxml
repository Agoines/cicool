<view class="page cover-box">
    <view class="title_layout">
        <text class="title">{{word}}</text>
        <text class="sub_title">{{phonetic}}</text>
    </view>

    <view style="display: block;text-align: center;margin-top: 80px;">
        <view wx:key="index" wx:for="{{wordTranslation}}">
            <view data-view-id="{{index}}" class="button" style="background:{{wordBg[index].background}}"
                  bind:tap="refresh">
                <mp-loading wx:if="{{item===''}}" ext-class="loading_style" type="dot-gray"
                            animated="{{animated}}"></mp-loading>
                <text wx:else style="color:{{wordBg[index].textColor}}">{{item}}</text>
            </view>
        </view>
        <view class="footer_container">
            <view class="fab" wx:if="{{afterChange}}" bind:tap="next">
                <text class="fab_text">下一个</text>
            </view>
        </view>

    </view>

    <mp-dialog title="提示" show="{{isListEmpty}}" bindbuttontap="back" buttons="{{dialogButton}}">
        <view>你还没有学习任何单词，请学习单词后再来进行复习</view>
    </mp-dialog>
</view>

