.button_layout {
    position: absolute;
    width: 100%;
}

.add_note_book {
    margin-left: 24rpx;
    height: 48rpx;
    width: 48rpx;
}

.card-item {
    display: block;
    text-align: center;
    margin-top: 30rpx;
}

.button {
    text-align: center;
    padding: 30rpx 36rpx;
    margin: 20rpx 40rpx;

    border-radius: 12rpx;
    box-shadow: 0 20rpx 60rpx rgba(38, 51, 77, 0.03);
    min-height: 50rpx;
}

.card-text {
    font-size: 28rpx;
    color: #292D32;
    text-align: right;
}

.fab {
    position: absolute;
    padding: 32rpx 128rpx;

    background: #202124;
    box-shadow: 0 10px 30px #20212433;
    border-radius: 240rpx;
}

.fab_text {
    color: #FFFFFF;

    font-style: normal;
    font-weight: 600;
    font-size: 32rpx;
}

.footer_container {
    /* 底部 */
    position: fixed;
    bottom: 0;

    width: 100%;
    height: 54rpx;

    justify-content: center;
    display: flex;
    flex-direction: row;
    margin-bottom: 100rpx;
}
