.book-item {
    width: 240rpx;
    display: inline-block;
    text-align: center;
    height: 280rpx;
    font-size: 50rpx;
    margin: 10rpx;
    background: url('https://products.ls.graphics/mesh-gradients/images/50.-Columbia-Blue.jpg');
    background-size: cover;
    border-radius: 18rpx;
}

.book-text {
    float: left;
    margin-top: 24rpx;
    color: #4e525eAA;
    font-size: 36rpx;
}

.book-description {

    margin-top: 12rpx;
    color: #4e525e99;
    font-size: 32rpx;
}

.content {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
